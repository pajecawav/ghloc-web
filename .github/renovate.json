{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:base", "group:allNonMajor"],
	"rangeStrategy": "bump",
	"timezone": "Europe/Moscow",
	"schedule": ["before 9am on saturday"],
	"npm": {
		"stabilityDays": 3
	},
	"packageRules": [
		{
			"matchPackagePatterns": ["heroicons"],
			"matchManagers": ["npm"],
			"enabled": false
		}
	]
}
